<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Main Button     -->
    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/set_btn_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
    </style>

    <!--    Google Button    -->
    <style name="GoogleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/set_google_btn</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
    </style>

    <!--    Skip Text view      -->
    <style name="SkipStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
    </style>

    <!--    Forgot Password     -->
    <style name="ForgotPassword">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>


    </style>


    <!--    OnBoarding Headers      -->
    <style name="OnBoardingHeaders">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
    </style>

    <!--    OnBoarding Body      -->
    <style name="OnBoardingBody">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/onBoardingBody</item>
        <item name="android:fontFamily">@font/el_messiri_medium</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    Auth Headers      -->
    <style name="AuthHeaders">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
    </style>

    <!--    Auth Body      -->
    <style name="AuthBody">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/onBoardingBody</item>
        <item name="android:fontFamily">@font/el_messiri_medium</item>
        <item name="android:gravity">center</item>
    </style>


    <!--    Text Input Layout Style      -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/un_focused</item>
        <item name="android:fontFamily">@font/el_messiri_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
    </style>

    <!--    mainHeaderInHomeScreens      -->
    <style name="mainHeaderInHomeScreens">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>

    </style>

<!--    Floating Action Button-->
    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>


</resources>


